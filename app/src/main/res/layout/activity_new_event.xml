<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.schedger.NewEvent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eventWrapperLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventNameLayout">

            <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventNameText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="New Event"
                android:ems="10"
                android:id="@+id/eventNameEdit"
                android:selectAllOnFocus="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventDateLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/eventStartLayout">

                <TextView
                    android:text="Starts at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventStartText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventStartMonthEdit"
                        android:text="MM"
                        android:selectAllOnFocus="true" />
                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventStartDayEdit"
                        android:text="DD"
                        android:selectAllOnFocus="true" />
                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventStartYearEdit"
                        android:text="YYYY"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventStartHourEdit"
                        android:text="Hour"
                        android:selectAllOnFocus="true" />

                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventStartMinuteEdit"
                        android:text="Min"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/endLayout">


                <TextView
                    android:text="End at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventEndText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventEndMonthEdit"
                        android:text="MM"
                        android:selectAllOnFocus="true" />
                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventEndDayEdit"
                        android:text="DD"
                        android:selectAllOnFocus="true" />
                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventEndYearEdit"
                        android:text="YYYY"
                        android:selectAllOnFocus="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventEndHourEdit"
                        android:text="Hour"
                        android:selectAllOnFocus="true" />

                    <EditText
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/eventEndMinuteEdit"
                        android:text="Min"
                        android:selectAllOnFocus="true" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:id = "@+id/recurrence"
            android:orientation="horizontal"
            android:weightSum="1">



            <TextView
                android:text="Recurrence"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/recurrence_text" />

            <RadioButton
                android:text="@string/monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1"
                android:layout_weight="0.17" />
            <RadioButton
                android:text="@string/weekly"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2" />
            <RadioButton
                android:text="@string/daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_weight="0.25" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventCommentsLayout"
            android:weightSum="1">

            <TextView
                android:text="Comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventCommentsText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:ems="10"
                android:id="@+id/eventCommentsEdit"
                android:layout_weight="0.34"
                android:inputType="textMultiLine"
                android:text="Enter comments here..."
                tools:gravity="top"
                android:selectAllOnFocus="true" />

        </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/saveEventButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskWrapperLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:focusable="false"
            android:id="@+id/dialogText" />

    </LinearLayout>

</RelativeLayout>
